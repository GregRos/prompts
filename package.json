{
  "name": "@gregros/prompts-root",
  "private": true,
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "tsc -b .",
    "build:clean": "run-s clean build",
    "clean": "yarn workspaces foreach -Ap run clean",
    "lint:check": "run-s prettier:check",
    "lint:fix": "run-s prettier:fix",
    "prettier:check": "prettier --check .",
    "prettier:fix": "prettier --write .",
    "test": "yarn workspaces foreach -Ap --topological-dev run test",
    "tidy": "yarn install && run-s lint:fix build:clean",
    "watch": "tsc -b . -w"
  },
  "devDependencies": {
    "@types/node": "^24.9.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.3.1",
    "prettier-plugin-jsdoc": "^1.3.0",
    "prettier-plugin-organize-imports": "^3.2.4",
    "prettier-plugin-packagejson": "^2.5.0",
    "shx": "^0.3.4",
    "typescript": "^5.9.3"
  },
  "packageManager": "yarn@4.9.1"
}
